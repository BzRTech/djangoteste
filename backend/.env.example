# ============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ============================================
DB_NAME=seu_banco_de_dados
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_HOST=localhost
DB_PORT=5432

# ============================================
# CONFIGURAÇÕES AWS S3 (OPCIONAL)
# ============================================
# Defina USE_S3=True para ativar upload para S3
# Se False, arquivos serão salvos localmente em /media/

USE_S3=False

# Credenciais AWS (obrigatório se USE_S3=True)
AWS_ACCESS_KEY_ID=sua_access_key_id
AWS_SECRET_ACCESS_KEY=sua_secret_access_key
AWS_STORAGE_BUCKET_NAME=nome-do-seu-bucket
AWS_S3_REGION_NAME=us-east-1

# ============================================
# INSTRUÇÕES
# ============================================
# 1. Copie este arquivo para .env
# 2. Preencha os valores reais
# 3. Nunca commite o arquivo .env no git
